<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>login_servlet_action</servlet-name>
        <servlet-class>login.ServletAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login_servlet_action</servlet-name>
        <url-pattern>/login_servlet_action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>common_data_action</servlet-name>
        <servlet-class>common.data_action</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>common_data_action</servlet-name>
        <url-pattern>/common_data_action</url-pattern>
    </servlet-mapping>
    <!-- ================  agriculture begin =================           -->
    <servlet>
        <servlet-name>agriculture_statistic_servlet_action</servlet-name>
        <servlet-class>agriculture.statistic.ServletAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agriculture_statistic_servlet_action</servlet-name>
        <url-pattern>/agriculture_statistic_servlet_action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>agriculture_users_servlet_action</servlet-name>
        <servlet-class>agriculture.users.ServletAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agriculture_users_servlet_action</servlet-name>
        <url-pattern>/agriculture_users_servlet_action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>agriculture_modu_servlet_action</servlet-name>
        <servlet-class>agriculture.modu.ServletAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agriculture_modu_servlet_action</servlet-name>
        <url-pattern>/agriculture_modu_servlet_action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>agriculture_log_servlet_action</servlet-name>
        <servlet-class>agriculture.log.ServletAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agriculture_log_servlet_action</servlet-name>
        <url-pattern>/agriculture_log_servlet_action</url-pattern>
    </servlet-mapping>
    <!-- ================  device begin =================           -->
    <servlet>
        <servlet-name>agriculture_device_servlet_action</servlet-name>
        <servlet-class>agriculture.device.ServletAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agriculture_device_servlet_action</servlet-name>
        <url-pattern>/agriculture_device_servlet_action</url-pattern>
    </servlet-mapping>
    <!-- ================  device end =================           -->
    <!-- ================  news begin =================           -->
    <servlet>
        <servlet-name>agriculture_news_servlet_action</servlet-name>
        <servlet-class>agriculture.news.ServletAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agriculture_news_servlet_action</servlet-name>
        <url-pattern>/agriculture_news_servlet_action</url-pattern>
    </servlet-mapping>
    <!-- ================  news end =================           -->

    <!-- ================  publicLog begin =================           -->
    <servlet>
        <servlet-name>agriculture_publicLog_servlet_action</servlet-name>
        <servlet-class>agriculture.publicLog.ServletAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agriculture_publicLog_servlet_action</servlet-name>
        <url-pattern>/agriculture_publicLog_servlet_action</url-pattern>
    </servlet-mapping>
    <!-- ================  publicLog end =================           -->
    <!-- ================  alarm begin =================           -->
    <servlet>
        <servlet-name>agriculture_alarm_servlet_action</servlet-name>
        <servlet-class>agriculture.alarm.ServletAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agriculture_alarm_servlet_action</servlet-name>
        <url-pattern>/agriculture_alarm_servlet_action</url-pattern>
    </servlet-mapping>
    <!-- ================  alarm end =================           -->
    <!-- ================  sensor begin =================           -->
    <servlet>
        <servlet-name>agriculture_sensor_servlet_action</servlet-name>
        <servlet-class>agriculture.sensor.ServletAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agriculture_sensor_servlet_action</servlet-name>
        <url-pattern>/agriculture_sensor_servlet_action</url-pattern>
    </servlet-mapping>
    <!-- ================  sensor end =================           -->
    <!-- ================  weather begin =================           -->
    <servlet>
        <servlet-name>agriculture_weather_servlet_action</servlet-name>
        <servlet-class>agriculture.weather.ServletAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agriculture_weather_servlet_action</servlet-name>
        <url-pattern>/agriculture_weather_servlet_action</url-pattern>
    </servlet-mapping>
    <!-- ================  weather end =================           -->
    <servlet>
        <servlet-name>agriculture_time_servlet_action</servlet-name>
        <servlet-class>agriculture.time.ServletAction</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>agriculture_time_servlet_action</servlet-name>
        <url-pattern>/agriculture_time_servlet_action</url-pattern>
    </servlet-mapping>
    <!-- 自动启动订阅接口 -->
    <servlet>
        <servlet-name>TimeServlet</servlet-name>
        <servlet-class>servlet.TimeServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>TimeServlet</servlet-name>
        <url-pattern>/servlet/TimeServlet</url-pattern>
    </servlet-mapping>


</web-app>